{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["../*"],
      "@/types/*": ["../types/*"],
      "@/utils/*": ["../utils/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../types"
  ]
}
